{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "nesbot/carbon": "^2.17",
        "symfony/console": "4.2.*",
        "symfony/dotenv": "4.2.*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "4.2.*",
        "symfony/monolog-bundle": "^3.3",
        "symfony/proxy-manager-bridge": "4.2.*",
        "symfony/yaml": "4.2.*"
    },
    "require-dev": {
        "symfony/test-pack": "^1.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "app-install": [
            "@app-composer"
        ],
        "app-composer": [
            "[ -z $APP_ENV ] || [ $APP_ENV = 'prod' ] && composer run-script app-composer-prod || composer run-script app-composer-dev"
        ],
        "app-composer-dev": [
            "@composer install --ansi --no-suggest --no-interaction --no-progress --profile"
        ],
        "app-composer-prod": [
            "@composer install --ansi --no-suggest --no-interaction --no-progress --profile --no-dev --optimize-autoloader --no-scripts"
        ],
        "app-cache-warmup": [
            "@php bin/console cache:warmup --env=$APP_ENV"
        ],
        "app-deploy": [
            "@app-cache-warmup"
        ],
        "lint-sanity": [
            "@composer-validate",
            "@security-check"
        ],
        "lint-analysis": [
            "composer install --ansi --no-suggest --no-interaction --no-progress --no-scripts",
            "@cs-check",
            "@phpstan"
        ],
        "test-unit": [
            "bin/phpunit --testsuite unit --verbose --stderr"
        ],
        "test-integration": [
            "bin/phpunit --testsuite integration --verbose --stderr"
        ],
        "composer-validate": [
            "composer validate"
        ],
        "cs-check": [
            "php-cs-fixer fix --config .phpcs/config.php --using-cache=no --verbose --dry-run"
        ],
        "cs-fix": [
            "php-cs-fixer fix --config .phpcs/config.php --using-cache=no --verbose"
        ],
        "phpstan": [
            "phpstan analyze --no-progress"
        ],
        "security-check": [
            "symfony security:check"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.2.*"
        }
    }
}
